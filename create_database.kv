<TextInput>:
	font_size: 24
<Create_database>:

	get_name_of_entry: get_name_of_entry
	get_place_of_explosion: get_place_of_explosion
	
	canvas.before:
		Color:
			rgba: 0.909,.898,1,1
		Rectangle:
			pos: self.pos
			size: self.size
	orientation: 'vertical'
	Button:
		size_hint: 1,.3
		text: 'Home'
		on_release: root.on_release()
	Label:
		size_hint: 1,.35
	GridLayout:
		cols:2
		size_hint: .7,1
		pos_hint: {'x':.135,'y':.4}
		
		canvas.before:
			Color:
				rgba: 0.7,0.3,0.4,1
			Rectangle:
				pos: self.pos
				size: self.size
		Label:
			text:'Give name to Entry'
			font_size: 16
		TextInput:
			id: get_name_of_entry
			
		Label:
			text:'Place of Explosion'
			font_size: 16
		TextInput:
			id: get_place_of_explosion
	Label:
		size_hint: 1,.35
	Button:
		size_hint: 1,.3
		on_release: root.on_back()
		#background_color: 0.3,0.6,0.8,1
		text: 'Add details'
		 